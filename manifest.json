{
    "manifest_version": 3,
    "name": "Let me read",
    "description": "Enable reading mode on pages where text is blurred or limited",
    "version": "0.2.0",
    "icons": {
        "16": "images/letmeread-16.png",
        "32": "images/letmeread-32.png",
        "48": "images/letmeread-48.png",
        "128": "images/letmeread-128.png"
      },
    "action": {},
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab", "tabs"],
    "optional_permissions": ["scripting", "cookies"],
    "host_permissions": ["<all_urls>"]
  }